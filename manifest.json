{
    "manifest_version": 2,
    "name": "DOMListener",
    "version": "0.12",
    "description": "Logs all DOM mutation events to the DevTools console.",
    "icons": {
        "128": "ico/logo_128.png",
        "48": "ico/logo_48.png"
    },
    "permissions": [
        "tabs",
        "*://*/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "ico/ear-off.png",
        "default_title": "Listen for DOM events"
    }
}